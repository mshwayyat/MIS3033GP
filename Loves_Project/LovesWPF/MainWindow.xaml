    <Grid>
        <Grid.OpacityMask>
            <ImageBrush ImageSource="/Loves Logo.png"/>
        </Grid.OpacityMask>
        <Grid.Background>
            <ImageBrush ImageSource="/Loves Logo.png"/>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="267" Margin="177,167,0,0" VerticalAlignment="Top" Width="526" Source="/Custom dimensions 462x279 px.png">
